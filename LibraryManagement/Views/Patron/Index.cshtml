@model LibraryManagement.Models.Patron.PatronIndexModel
@{
	ViewBag.Title = "Patron Index";
}

<h3>@ViewBag.Title</h3>
<div id="patronIndex">
	<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="patronIndexTable">
		<thead>
			<tr>
				<th>Patron Link</th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Library Card Id</th>
				<th>Overdue Fees</th>
				<th>Home Library</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var patron in @Model.Patrons)
			{
				<tr>
					<th><a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id">(Profile)</a></th>
					<th>@patron.FirstName</th>
					<th>@patron.LastName</th>
					<th>@patron.LibraryCardId</th>
					<th>@patron.OverdueFees</th>
					<th>@patron.HomeLibraryBranch</th>
				</tr>
			}
		</tbody>
	</table>
</div>